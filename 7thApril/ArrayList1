package collections;

import java.util.List;
import java.util.ArrayList;

public class col1 {
	public static void main(String[] args){
		
		//need not specify size as it is dynamic
		ArrayList<Integer> a=new ArrayList<>();
		//add elements
		a.add(10);
		a.add(6);
		a.add(14);
		a.add(9);
		a.add(8);
		System.out.println("List is: "+a);
		
		//access elements
		int i=a.get(3);
		System.out.println("Element at 3rd index: "+i);
		
		//removing elemnt
		int r=a.remove(2);
		System.out.println("element removed "+r);
		System.out.println("List is: "+a);
		
		//add list at certain index position
		a.addAll(2, a);
		System.out.println("List is: "+a);
		
		
	}
}
